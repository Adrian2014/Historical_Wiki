<p>
  <script src="http://d3js.org/queue.v1.min.js"></script>
  <% javascript 'timeline.js' %>



  <div class="container">
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <div class="content" >
        <h1 style="font-family: 'Rock Salt', cursive;">Last Five Posts</h1>
        <ol>
        <% @posts.each do |post| %>
          <li style="font-family: 'Rock Salt', cursive;">
            <%= link_to post.post_title, post, {:style =>'font-family: ''Rock Salt'', cursive;'}%></br>
            <%= post.post_date %></br>
          </li> </br>
        <% end %>
        </ol>
      <div>
    </tbody>
  </table>

  <br>

  <div class = "container" style="background-color: #111; height: 55px;">

     <%= form_for @tag, url: "/tag/search" do |f| %>
          <div class="row">
            <div class="small-5 columns">
              <%= f.text_field :tag_text, placeholder: "Search by Tag", id: 'tag_text', class: 'input-text'%>
              <label class="label-helper" for="tag_text">Search by Tag</label>
            </div>
            <%= f.submit "Submit", class: "button small [radius round]"%>
          </div>     
    <% end %>
  </div>

  </div>
</p>
