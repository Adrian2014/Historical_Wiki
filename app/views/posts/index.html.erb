<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <ol>
    <% @posts.each do |post| %>
  
      <li>
        <%= link_to post.post_title, post %></br>
        <%= post.post_date %></br>

        
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li> </br>
       
     
    <% end %>
    </ol>

  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
