<%= form_for @comment,:url => "", as: :comment, html: {id: "comment_form"} do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %>
        prohibited this comment from being saved:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="create_new_comment">
    <div class="row">
      <div class="small-9 columns">
        <%= f.text_area :comment_text, id: 'comment_text', placeholder: "Comment Here!", class: 'input-text' %>
        <label class="label-helper" for="comment_text">Comment</label><br>
      </div>
    </div>
    <div class="row">
      <div class="small-4 columns">
        <%= f.submit "Submit", class: "button tiny [radius round]" %>
      </div>
    </div>
  </div>
<% end %>
